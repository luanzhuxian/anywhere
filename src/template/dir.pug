doctype html
html(lang="en")
    head
        meta(charset='UFT-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        title= title
        style(type='text/css').
            li {
                margin-bottom: 6px;
            }
            a {
                display: block;
            }
            .nav {
                font-size: 18px;
            }
    body
        a(href='/').nav Home
        ul#list
            each val in files
                li
                    a(href=dirname + '/' + val)= val
